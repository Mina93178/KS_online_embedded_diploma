#include <stdio.h>
#include <stdlib.h>
void flush(void){
	fflush(stdin);
	fflush(stdout);
}
int main(void) {
	float User_Input_1=0,User_Input_2=0;
	printf("Enter a Character:");
	flush();
	scanf("%c",&User_Input);
	printf("ASCII Value of %c = %d",User_Input,User_Input);
	return 0;
}

