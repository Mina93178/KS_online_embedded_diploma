#include <stdio.h>
#include <stdlib.h>
void flush(void){
	fflush(stdin);
	fflush(stdout);
}
int main(void) {
	int User_Input=0, i=0,sum=0;
	printf("Enter a Number: ");
	flush();
	scanf("%d", &User_Input);
	while(i<User_Input){
		sum+=i;
		i++;
	}
	return 0;
}
