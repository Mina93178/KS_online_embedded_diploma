#include <stdio.h>
#include <stdlib.h>
void flush(void){
	fflush(stdin);
	fflush(stdout);
}
int main(void) {
	char User_Input=0;
	printf("Enter an Alphabet: ");
	flush();
	scanf("%c",&User_Input);
	(User_Input=='a' ||User_Input=='i' || User_Input=='u' || User_Input=='o'||User_Input=='e')?
			printf("%c is a vowel.",User_Input):printf("%c is consonant.",User_Input);

	return 0;
}
